<style>
    .mud-nav-link.active:not(.mud-nav-link-disabled) {
        font-weight: 500 !important;
        color: white !important;
        background-color: var(--mud-palette-action-default-hover);
    }
</style>

<MudDrawer @bind-Open="@Open" Breakpoint="Breakpoint.Sm" Elevation="1"
           Variant="@DrawerVariant.Responsive" PreserveOpenState="@true"
           Style="@($"color:{Colors.Shades.White}; background:{Colors.Green.Darken1};")">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Меню</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Add" IconColor="Color.Surface" Href="create">Создать</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard" IconColor="Color.Surface" Href="projects">Проекты</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.IntegrationInstructions" IconColor="Color.Surface"  Href="instruction">Инструкция</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Info" IconColor="Color.Surface" Href="/">О программе</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code
{
    [Parameter]
    public bool Open { get; set; }
}
